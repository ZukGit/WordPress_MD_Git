{
"update_url": "https://clients2.google.com/service/update2/crx",

	"name": "小米路由器",
	"version": "1.0",
	"manifest_version": 2,
	"description": "鼠标右键下载文件到小米路由器，支持链接，图片，音频，视频等类型的文件下载。",
	"homepage_url": "http://www.jiyongchao.cn/?from=chrome_xiaomi_router",
	"browser_action": {
		"default_icon": "logo48.png",
		"default_title": "小米路由器",
		"default_popup": "popup.html"
	},
	"background": {
        "persistent": true,
        "scripts": ["base64.js","background.js"]
    },
    "permissions": [
        "contextMenus"
    ],
	"icons":{
		"48": "logo48.png",
		"72": "logo72.png",
		"96": "logo96.png",
		"128": "logo144.png",
		"144": "logo144.png"
	}
}